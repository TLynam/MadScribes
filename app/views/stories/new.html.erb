<%= form_for @story, :html => {:class => "form-horizontal"} do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <h3><li><%= message %></li><h3>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-md-8 col-sm-8 col-xs-8">
      <%= f.text_field :title, class: "form-control", :autofocus => true %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :rounds, class: "col-sm-2 control-label" %>
    <div class="col-lg-1 col-md-2 col-sm-2 col-xs-3">
      <%= f.number_field :rounds, class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :writing_period, "Writing Time", class: "col-sm-2 control-label" %>
    <div class="col-lg-1 col-md-2 col-sm-2 col-xs-3">
      <%= f.select :writing_period, options_for_select(Story::TIME_PERIODS), class: "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :voting_period, "Voting Time", class: "col-sm-2 control-label" %>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
      <%= f.select :voting_period, options_for_select(Story::TIME_PERIODS), class: "form-control" %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
